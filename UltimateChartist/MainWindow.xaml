<Window x:Class="UltimateChartist.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                xmlns:usercontrols="clr-namespace:UltimateChartist.UserControls"
                xmlns:ultimatechartist="clr-namespace:UltimateChartist"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                d:DataContext="{d:DesignInstance Type=ultimatechartist:MainWindowViewModel, IsDesignTimeCreatable=False}"
                Title="MainWindow" Height="350" Width="525">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <telerik:RadMenu>
            <telerik:RadMenuItem Header="_File" />
            <telerik:RadMenuItem Header="_Edit" />
            <telerik:RadMenuItem Header="_View" />
            <telerik:RadMenuItem Header="_Portfolios" />
            <telerik:RadMenuItem Header="_Analysis" />
        </telerik:RadMenu>
        <usercontrols:GraphUserControl Grid.Row="1"></usercontrols:GraphUserControl>
    </Grid>
</Window>
