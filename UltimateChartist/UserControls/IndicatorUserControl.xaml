<UserControl x:Class="UltimateChartist.UserControls.IndicatorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UltimateChartist.UserControls" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <telerik:RadToolBar VerticalAlignment="Top" HorizontalAlignment="Left">
            <telerik:RadButton Margin="2" Command="{Binding CloseCommand}" CommandParameter="">
                <Image Source="/Images/delete-icon.png" Stretch="None" ToolTipService.ToolTip="Close"/>
            </telerik:RadButton>
            <TextBlock Text="{Binding Header, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:IndicatorUserControl}}}"/>
        </telerik:RadToolBar>
    </Grid>
</UserControl>
