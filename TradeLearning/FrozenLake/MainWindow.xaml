<Window x:Class="FrozenLake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrozenLake"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <UniformGrid Grid.Column="1" x:Name="ColorGrid" Rows="10" Columns="10"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <ComboBox Width="120" Height="25" Name="agentComboBox" DisplayMemberPath="Name" Margin="2" SelectionChanged="agentComboBox_SelectionChanged"/>
            <Button Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center" Click="startButton_Click"/>

            <Button Name="trainButton" Content="Train" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center" Click="trainButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
