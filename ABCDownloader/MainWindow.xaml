<Window x:Class="ABCDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABCDownloader"
        mc:Ignorable="d"
        Title="ABC Downloader" Height="450" Width="1200">
    <Window.Resources>
        <local:ViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
            <Label Content="from "/>
            <DatePicker SelectedDate="{Binding FromDate, Mode=TwoWay}" Margin="5"/>
            <Label Content="To "/>
            <DatePicker SelectedDate="{Binding ToDate, Mode=TwoWay}" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="1" Content=" &lt; " Margin="5" ToolTip="Previous Month" Command="{Binding PreviousMonthCommand}"/>
            <Button Grid.Row="0" Grid.Column="1" Content=" &gt; " Margin="5" ToolTip="Next Month" Command="{Binding NextMonthCommand}"/>
            <TextBox Text="{Binding Folder}" Margin="5" Width="400" VerticalContentAlignment="Center"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Open" Command="{Binding OpenFolderCommand}" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Grid.Row="0" Grid.Column="1" Content="ABC" HorizontalAlignment="Right" Command="{Binding OpenAbcCommand}" Margin="5" />
            <Button Grid.Row="0" Grid.Column="1" Content="&#x2193; Labels" Command="{Binding DownloadLabelCommand}" Margin="5"/>
            <TextBox Text="{Binding Isin}" Margin="5" Width="100" VerticalContentAlignment="Center"/>
            <Button Grid.Row="0" Grid.Column="1" Content="&#x2193; ISIN" Command="{Binding DownloadIsinCommand}" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="1" Content="&#x2193; Data" Command="{Binding DownloadDataCommand}" Margin="5"/>
        </StackPanel>

        <Label Grid.Row="1" Grid.Column="0" Content="Data:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Data}" IsReadOnly="True" Margin="5" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
