<UserControl x:Class="StockAnalyzerApp.CustomControl.AlertDialog.StockAlertDialog.AddStockAlert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockAnalyzerApp.CustomControl.AlertDialog.StockAlertDialog"
             xmlns:bardurationctrl="clr-namespace:StockAnalyzerApp.CustomControl.BarDurationCtrl" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" Background="AntiqueWhite"
             d:DesignHeight="150" d:DesignWidth="700" Language="fr-FR"
       d:DataContext="{d:DesignInstance Type=local:AddStockAlertViewModel, IsDesignTimeCreatable=False}">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="2">
            <Label Width="60" Content="Group "/>
            <TextBox Text="{Binding Group}" VerticalAlignment="Center" Width="80" IsEnabled="False"/>
            <Label>Stock Name</Label>
            <TextBox Text="{Binding StockName}" VerticalAlignment="Center" Width="160" IsEnabled="False"/>
            <bardurationctrl:BarDurationControl BarDuration="{Binding BarDuration, Mode=TwoWay}" LineBreakVisibility="Visible"/>
        </StackPanel>
        <TabControl Name="tabControl" Margin="2">
            <TabItem Header="Graph Indicators">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                    <Label Width="60">Indicator</Label>
                    <telerik:RadComboBox SelectedItem="{Binding IndicatorName}"  ItemsSource="{Binding IndicatorNames}"  Width="250"/>
                    <Label Content="Event"/>
                    <telerik:RadComboBox SelectedItem="{Binding Event, Mode=TwoWay}" ItemsSource="{Binding Events}" Width="250"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Price Trigger">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                    <Label Width="40">Price</Label>
                    <TextBox Text="{Binding Price, Mode=TwoWay}" Width="40" VerticalAlignment="Center"/>
                    <RadioButton VerticalAlignment="Center" IsChecked="{Binding BrokenUp}" Margin="4">Broken Up</RadioButton>
                    <RadioButton VerticalAlignment="Center" Margin="4">Broken Down</RadioButton>
                </StackPanel>
            </TabItem>
            <TabItem Header="All Indicators" Visibility="Collapsed">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                    <Label Width="60">Indicator</Label>
                    <ComboBox SelectedItem="{Binding IndicatorType}"  ItemsSource="{Binding IndicatorTypes}"  Width="80"/>
                    <TextBox Text="{Binding Indicator}" Width="200" Margin="2"/>
                    <Label Content="Event"/>
                    <ComboBox SelectedItem="{Binding Event, Mode=TwoWay}" ItemsSource="{Binding Events}" Width="200"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2">
            <Button Content="Ok" Margin="2" Click="okButton_Click" IsDefault="True"></Button>
            <Button Content="Cancel" Margin="2" Click="cancelButton_Click" IsCancel="True"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
