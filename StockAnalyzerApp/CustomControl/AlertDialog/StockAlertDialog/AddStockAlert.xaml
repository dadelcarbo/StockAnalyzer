<UserControl x:Class="StockAnalyzerApp.CustomControl.AlertDialog.StockAlertDialog.AddStockAlert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockAnalyzerApp.CustomControl.AlertDialog.StockAlertDialog"
             xmlns:stockClasses="clr-namespace:StockAnalyzer.StockClasses;assembly=StockAnalyzer"
             xmlns:bardurationctrl="clr-namespace:StockAnalyzerApp.CustomControl.BarDurationCtrl" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d"
             d:DesignWidth="700" d:DesignHeight="550" Language="fr-FR"
       d:DataContext="{d:DesignInstance Type=local:AddStockAlertViewModel, IsDesignTimeCreatable=False}">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Name="tabControl" Grid.Row="0" Margin="2" SelectionChanged="tabControl_SelectionChanged">
            <TabItem Header="Group Alert" Tag="{x:Static Member=stockClasses:AlertType.Group}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Label Width="80" Content="Group "/>
                            <TextBox Text="{Binding Group}" VerticalAlignment="Center" Width="80"/>
                            <bardurationctrl:BarDurationControl BarDuration="{Binding BarDuration, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                            <Label Width="80">Trigger</Label>
                            <telerik:RadComboBox SelectedItem="{Binding TriggerName}"  ItemsSource="{Binding IndicatorNames}"  Width="250"/>
                            <Label Content="Event"/>
                            <telerik:RadComboBox SelectedItem="{Binding TriggerEvent, Mode=TwoWay}" ItemsSource="{Binding TriggerEvents}" Width="250"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                            <Label Width="80">Filter</Label>
                            <telerik:RadComboBox SelectedItem="{Binding FilterName}"  ItemsSource="{Binding IndicatorNames}"  Width="250"/>
                            <Label Content="Event"/>
                            <telerik:RadComboBox SelectedItem="{Binding FilterEvent, Mode=TwoWay}" ItemsSource="{Binding FilterEvents}" Width="250"/>
                        </StackPanel>
                    </StackPanel>
                    <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding AlertDefs}" RowIndicatorVisibility="Collapsed" ShowGroupPanel="False" Height="400">
                    </telerik:RadGridView>
                </Grid>
            </TabItem>
            <TabItem Header="Stock Alert" Tag="{x:Static Member=stockClasses:AlertType.Stock}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Label Width="80">Stock Name</Label>
                            <TextBox Text="{Binding StockName}" VerticalAlignment="Center" Width="160" IsEnabled="False"/>
                            <bardurationctrl:BarDurationControl BarDuration="{Binding BarDuration, Mode=TwoWay}" LineBreakVisibility="Visible"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                            <Label Width="80">Trigger</Label>
                            <telerik:RadComboBox SelectedItem="{Binding TriggerName}"  ItemsSource="{Binding IndicatorNames}"  Width="250"/>
                            <Label Content="Event"/>
                            <telerik:RadComboBox SelectedItem="{Binding TriggerEvent, Mode=TwoWay}" ItemsSource="{Binding TriggerEvents}" Width="250"/>
                        </StackPanel>
                    </StackPanel>
                    <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding AlertDefs}" RowIndicatorVisibility="Collapsed" ShowGroupPanel="False" Height="400">
                    </telerik:RadGridView>
                </Grid>
            </TabItem>
            <TabItem Header="Price Alert"  Tag="{x:Static Member=stockClasses:AlertType.Price}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                        <Label Width="40">Price</Label>
                        <TextBox Text="{Binding Price, Mode=TwoWay}" Width="40" VerticalAlignment="Center"/>
                        <RadioButton VerticalAlignment="Center" IsChecked="{Binding BrokenUp}" Margin="4">Broken Up</RadioButton>
                        <RadioButton VerticalAlignment="Center" Margin="4">Broken Down</RadioButton>
                    </StackPanel>
                    <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding AlertDefs}" RowIndicatorVisibility="Collapsed" ShowGroupPanel="False" Height="400">
                    </telerik:RadGridView>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2">
            <Button Content="Ok" Margin="2" Click="okButton_Click" IsDefault="True"></Button>
            <Button Content="Cancel" Margin="2" Click="cancelButton_Click" IsCancel="True"></Button>
        </StackPanel>
    </Grid>
</UserControl>
