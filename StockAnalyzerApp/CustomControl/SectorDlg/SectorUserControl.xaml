<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockAnalyzerApp.CustomControl.SectorDlg"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:stockClasses="clr-namespace:StockAnalyzer.StockClasses;assembly=StockAnalyzer"
             x:Class="StockAnalyzerApp.CustomControl.SectorDlg.SectorUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type local:SectorViewModel}}">
    <UserControl.DataContext>
        <local:SectorViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                    Name="border"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="#FFDDDDDD"
                    Padding="1,2" Margin="2">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFAAAAAA" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#FFF3F3F3" />
                                <Setter TargetName="border" Property="Background" Value="#FFAAAAAA" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD9D9D9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
            
            <Label Content="Group" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5"/>
            <ComboBox Width="130" Height="22" VerticalContentAlignment="Center" SelectedItem="{Binding Group, Mode=TwoWay}" ItemsSource="{Binding Groups}"/>

            <Label Content="Duration" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5"/>
            <ComboBox Width="80" VerticalContentAlignment="Center" Height="22" Margin="0,0,20,0"
                SelectedItem="{Binding BarDuration, Mode=TwoWay}"
                ItemsSource="{Binding Source={x:Static stockClasses:StockBarDuration.BarDurations}}"/>

            <RadioButton Content="1W" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="1W"/>
            <RadioButton Content="MTD" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="MTD"/>
            <RadioButton Content="1M" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="1M" IsChecked="True" />
            <RadioButton Content="2M" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="2M" />
            <RadioButton Content="3M" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="3M" />
            <RadioButton Content="6M" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="6M" />
            <RadioButton Content="YTD" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="YTD"/>
            <RadioButton Content="1Y" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="1Y" />
            <RadioButton Content="2Y" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="2Y" />
            <RadioButton Content="Max" VerticalAlignment="Center" Command="{Binding PerformCommand}" CommandParameter="Max"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <telerik:RadCartesianChart x:Name="sectorChart" Palette="Windows8" ClipToBounds="False">

                <telerik:RadCartesianChart.Behaviors>
                    <telerik:ChartSelectionBehavior />
                    <telerik:ChartTrackBallBehavior />
                </telerik:RadCartesianChart.Behaviors>

                <telerik:RadCartesianChart.VerticalAxis>
                    <telerik:LinearAxis Title="Sectors" 
                                              ElementBrush="{Binding Palette.GlobalEntries[1].Fill, ElementName=sectorChart}" 
                                              HorizontalLocation="Right" Minimum="{Binding MinVal}" Maximum="{Binding MaxVal}"/>
                </telerik:RadCartesianChart.VerticalAxis>
                <telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:CategoricalAxis LabelInterval="10" SmartLabelsMode="SmartStep"/>
                </telerik:RadCartesianChart.HorizontalAxis>
                <telerik:RadCartesianChart.Grid>
                    <telerik:CartesianChartGrid MajorLinesVisibility="Y" />
                </telerik:RadCartesianChart.Grid>

            </telerik:RadCartesianChart>
            <telerik:RadLegend Grid.Column="1" Margin="4,12" MinWidth="76" Items="{Binding LegendItems, ElementName=sectorChart}"/>
        </Grid>
    </Grid>

</UserControl>
