<UserControl x:Class="StockAnalyzerApp.CustomControl.SectorDlg.SectorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockAnalyzerApp.CustomControl.SectorDlg"
             xmlns:abc="clr-namespace:StockAnalyzer.StockClasses.StockDataProviders.AbcDataProvider;assembly=StockAnalyzer"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:SectorViewModel, IsDesignTimeCreatable=False}">
    <UserControl.DataContext>
        <local:SectorViewModel></local:SectorViewModel>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
            <Label Content="Period" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5"/>
            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="160" Text="{Binding Period}" Padding="5"/>
            <Button Padding="5" Command="{Binding PerformCommand}">Go</Button>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <telerik:RadCartesianChart x:Name="sectorChart" Palette="Windows8" ClipToBounds="False">

                <telerik:RadCartesianChart.Behaviors>
                    <telerik:ChartSelectionBehavior />
                    <telerik:ChartTrackBallBehavior />
                </telerik:RadCartesianChart.Behaviors>

                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[0].Points}" IsHitTestVisible="True">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[0].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Name, Source={Binding SectorData[0]}}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[1]}" IsHitTestVisible="True">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[1].Name}"/>
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[1].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[2]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[2].Name}"  />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[2].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[3]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[3].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[3].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[4]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[4].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[4].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[5]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[5].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[5].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[6]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[6].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[6].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[7]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[7].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[7].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[8]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[8].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[8].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[9]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[9].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[9].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorData[10]}">
                    <telerik:LineSeries.LegendSettings>
                        <telerik:SeriesLegendSettings Title="{Binding Path=SectorData[10].Name}" />
                    </telerik:LineSeries.LegendSettings>
                    <telerik:LineSeries.TrackBallInfoTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=SectorData[10].Name}"/>
                                <TextBlock Text="{Binding Path=DataPoint.Value, StringFormat=F2}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>

                <telerik:RadCartesianChart.VerticalAxis>
                    <telerik:LinearAxis Title="Sectors" 
                                              ElementBrush="{Binding ElementName=sectorChart, Path=Palette.GlobalEntries[1].Fill}" 
                                              HorizontalLocation="Right" Minimum="{Binding MinVal}" Maximum="{Binding MaxVal}"/>
                </telerik:RadCartesianChart.VerticalAxis>
                <telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:CategoricalAxis LabelInterval="10" SmartLabelsMode="SmartStep"/>
                </telerik:RadCartesianChart.HorizontalAxis>
                <telerik:RadCartesianChart.Grid>
                    <telerik:CartesianChartGrid MajorLinesVisibility="Y" />
                </telerik:RadCartesianChart.Grid>
            </telerik:RadCartesianChart>
            <telerik:RadLegend Grid.Column="1" Margin="4,12" MinWidth="76" Items="{Binding LegendItems, ElementName=sectorChart}">
            </telerik:RadLegend>
        </Grid>
    </Grid>

</UserControl>
