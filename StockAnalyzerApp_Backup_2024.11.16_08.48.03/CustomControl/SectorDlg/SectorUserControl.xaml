                            </StackPanel>
                        </DataTemplate>
                    </telerik:LineSeries.TrackBallInfoTemplate>
                </telerik:LineSeries>
                <telerik:LineSeries CategoryBinding="X" ValueBinding="Y" ItemsSource="{Binding SectorValues[5]}">
